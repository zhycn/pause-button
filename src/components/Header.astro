---
interface Props {
  locale: any;
  currentLang: string;
}

const { locale, currentLang } = Astro.props;
const supportedLangs = [
  { code: 'zh-CN', label: '中文' },
  { code: 'en', label: 'English' }
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/90 dark:bg-gray-950/90 backdrop-blur-md border-b border-gray-200/50 dark:border-gray-800/50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="/" class="text-xl font-semibold text-gray-900 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-300 transition-colors">
        {locale.ui.logo}
      </a>
    </div>

    <!-- Right side: GitHub, Language, Theme -->
    <div class="flex items-center gap-4">
      <!-- GitHub -->
      <a
        href={locale.footer.links.github}
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
        aria-label={locale.ui.github}
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" clip-rule="evenodd"/>
        </svg>
      </a>

      <!-- Language Switcher - Dropdown -->
      <div class="relative">
        <select
          id="lang-switcher"
          aria-label={locale.ui.language}
          class="appearance-none px-3 py-2 pr-8 text-sm text-gray-600 dark:text-gray-400 bg-transparent border border-gray-300 dark:border-gray-700 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-400 dark:focus:ring-gray-600 transition-colors cursor-pointer"
        >
          {supportedLangs.map((lang) => (
            <option value={lang.code} selected={lang.code === currentLang}>
              {lang.label}
            </option>
          ))}
        </select>
        <!-- Custom dropdown arrow -->
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-2">
          <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </div>
      </div>

      <!-- Theme Switcher -->
      <button
        id="theme-switcher"
        type="button"
        class="p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
        aria-label={locale.ui.theme}
        aria-pressed="false"
      >
        <!-- Sun icon (light mode) -->
        <svg id="sun-icon" class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M12 21a9 9 0 1 1 0-18 9 9 0 0 1 0 18z"/>
        </svg>
        <!-- Moon icon (dark mode) -->
        <svg id="moon-icon" class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 0 1 8.646 3.646 9 9 0 1 0 18 9 9 0 0 1 15.354 20.354z"/>
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  (function() {
    'use strict';
    
    function initHeader() {
      // Theme switcher
      const themeSwitcher = document.getElementById('theme-switcher');
      if (themeSwitcher) {
        function updateThemeButton() {
          const isDark = document.documentElement.classList.contains('dark');
          themeSwitcher.setAttribute('aria-pressed', isDark.toString());
        }

        themeSwitcher.addEventListener('click', () => {
          const isDark = document.documentElement.classList.toggle('dark');
          try {
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            console.log('[Theme] Switched to:', isDark ? 'dark' : 'light');
          } catch (e) {
            console.warn('[Theme] Failed to save theme:', e);
          }
          updateThemeButton();
        });

        updateThemeButton();
        console.log('[Theme] Initialized');
      }

      // Language switcher - Dropdown
      const langSwitcher = document.getElementById('lang-switcher') as HTMLSelectElement;
      if (langSwitcher) {
        langSwitcher.addEventListener('change', (e) => {
          const target = e.target as HTMLSelectElement;
          const newLang = target.value;
          const currentLang = langSwitcher.getAttribute('data-current-lang') || '';
          
          
          if (!newLang || newLang === currentLang) {
            console.warn('[Language] Invalid language switch');
            return;
          }

          const supportedLangs = ['zh-CN', 'en'];
          if (!supportedLangs.includes(newLang)) {
            console.warn('[Language] Unsupported language:', newLang);
            return;
          }
          
          console.log('[Language] Switching to:', newLang);
          
          try {
            const url = new URL(window.location.href);
            url.searchParams.set('lang', newLang);
            window.location.href = url.toString();
          } catch (error) {
            console.error('[Language] Failed to switch language:', error);
          }
        });
        
        console.log('[Language] Initialized');
      }
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHeader);
    } else {
      setTimeout(initHeader, 0);
    }
  })();
</script>
