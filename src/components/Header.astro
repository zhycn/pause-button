---
import type { Locale } from '../types/locale';
import GithubIcon from './GithubIcon.astro';
import type { SupportedLocale } from '../i18n';
import { supportedLocales, getLanguageURL } from '../i18n';

interface Props {
  locale: Locale;
  currentLang: SupportedLocale;
}

const { locale, currentLang } = Astro.props;

const supportedLangs = [
  { code: 'zh-CN' as SupportedLocale, label: '‰∏≠Êñá', flag: 'üá®üá≥' },
  { code: 'en' as SupportedLocale, label: 'English', flag: 'üá∫üá∏' }
];
---
<header class="fixed top-0 left-0 right-0 z-50 glass-effect">
  <div class="container">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a 
          href="/" 
          class="text-lg font-semibold tracking-tight transition-all duration-200 hover:opacity-70 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[var(--color-accent)] rounded-lg px-2 py-1 -ml-2"
          style={{ color: 'var(--color-text-primary)' }}
        >
          <span class="inline-flex items-center gap-2.5">
            <span class="text-xl transition-transform duration-200 hover:rotate-12">‚è∏</span>
            <span>{locale.ui.logo}</span>
          </span>
        </a>
      </div>

      <!-- Right side: GitHub, Language, Theme -->
      <nav class="flex items-center gap-1 sm:gap-2" aria-label="Navigation">
        <!-- GitHub -->
        <GithubIcon />

        <!-- Language Switcher - Êõ¥‰ºòÈõÖÁöÑËÆæËÆ° -->
        <div class="relative">
          <select
            id="lang-switcher"
            aria-label={locale.ui.language}
            class="appearance-none pl-3 pr-8 py-2 text-sm font-medium rounded-lg transition-all duration-200 cursor-pointer min-w-[100px] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[var(--color-accent)]"
            style={{ background: 'var(--color-bg-tertiary)', color: 'var(--color-text-primary)', border: '1px solid var(--color-border)' }}
            data-current-lang={currentLang}
          >
            {supportedLangs.map((lang) => 
              <option value={lang.code} selected={lang.code === currentLang}>
                {lang.flag} {lang.label}
              </option>
            )}
          </select>
          <!-- Custom dropdown arrow -->
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-2.5">
            <svg class="w-4 h-4" style={{ color: 'var(--color-text-tertiary)' }} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </div>

        <!-- Theme Switcher - Astro È£éÊ†ºÁöÑÊîπËøõËßÜËßâÂèçÈ¶à -->
        <button
          id="theme-switcher"
          type="button"
          class="p-2.5 rounded-lg transition-all duration-200 group focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[var(--color-accent)] hover:bg-[var(--color-bg-tertiary)]"
          style={{ color: 'var(--color-text-secondary)' }}
          aria-label={locale.ui.theme}
          aria-pressed="false"
        >
          <!-- Sun icon (light mode) -->
          <svg id="sun-icon" class="w-5 h-5 hidden dark:block transition-transform duration-300 group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M12 21a9 9 0 1 1 0-18 9 9 0 0 1 0 18z"/>
          </svg>
          <!-- Moon icon (dark mode) -->
          <svg id="moon-icon" class="w-5 h-5 block dark:hidden transition-transform duration-300 group-hover:-rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 0 1 8.646 3.646 9 9 0 1 0 18 9 9 9 0 0 1 15.354 20.354z"/>
          </svg>
        </button>
      </nav>
    </div>
  </div>
</header>

<script>
  (function() {
    'use strict';
    
    function initHeader() {
      // Theme switcher
      const themeSwitcher = document.getElementById('theme-switcher');
      if (themeSwitcher) {
        function updateThemeButton() {
          const isDark = document.documentElement.classList.contains('dark');
          themeSwitcher.setAttribute('aria-pressed', isDark.toString());
        }

        themeSwitcher.addEventListener('click', () => {
          const isDark = document.documentElement.classList.toggle('dark');
          try {
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
          } catch (e) {
            // localStorage‰∏çÂèØÁî®ÔºåÈùôÈªòÂ§±Ë¥•
          }
          updateThemeButton();
        });

        updateThemeButton();
      }

      // Language switcher
      const langSwitcher = document.getElementById('lang-switcher') as HTMLSelectElement;
      if (langSwitcher) {
        const currentLangValue = langSwitcher.getAttribute('data-current-lang') || '';
        const supportedLangs = ['zh-CN', 'en'];
        
        // Ensure select value matches currentLang
        if (langSwitcher.value !== currentLangValue) {
          langSwitcher.value = currentLangValue;
        }
        
        langSwitcher.addEventListener('change', function(e) {
          const target = e.target as HTMLSelectElement;
          const newLang = target.value;
          
          if (!newLang || newLang === currentLangValue) {
            // Reset to current language if same or invalid
            setTimeout(() => {
              target.value = currentLangValue;
            }, 100);
            return;
          }

          if (!supportedLangs.includes(newLang)) {
            // Reset to current language
            setTimeout(() => {
              target.value = currentLangValue;
            }, 100);
            return;
          }
          
          try {
            const url = new URL(window.location.href);
            url.searchParams.set('lang', newLang);
            // ‰ΩøÁî® replace ËÄå‰∏çÊòØ hrefÔºåÈÅøÂÖçÂú®ÂéÜÂè≤ËÆ∞ÂΩï‰∏≠Áïô‰∏ãËÆ∞ÂΩï
            window.location.replace(url.toString());
          } catch (error) {
            // Reset on error
            setTimeout(() => {
              target.value = currentLangValue;
            }, 100);
          }
        });
      }
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHeader);
    } else {
      setTimeout(initHeader, 0);
    }
  })();
</script>
