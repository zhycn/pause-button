---
interface Props {
  locale: any;
}

const { locale } = Astro.props;
---

<footer class="w-full border-t border-gray-200 dark:border-gray-800 bg-white/90 dark:bg-gray-800/95 backdrop-blur-sm mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Links -->
      <nav class="flex items-center gap-6 text-sm" aria-label="Footer navigation">
        <a
          href={locale.footer.links.github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors font-medium"
        >
          GitHub
        </a>
        <a
          href={locale.footer.links.docs}
          class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors font-medium"
        >
          Docs
        </a>
        <a
          href={locale.footer.links.about}
          class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors font-medium"
        >
          About
        </a>
      </nav>

      <!-- Version & Copyright -->
      <div class="text-sm text-gray-500 dark:text-gray-500 text-center md:text-right">
        <span class="mr-2 font-mono">{locale.footer.version}</span>
        <span>{locale.footer.copyright}</span>
      </div>
    </div>
  </div>
</footer>
