---
interface Props {
  locale: any;
}

const { locale } = Astro.props;
---

<section class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20 lg:py-32">
  <h2 class="text-3xl sm:text-4xl lg:text-5xl font-light text-center text-gray-900 dark:text-gray-100 mb-12 md:mb-16 lg:mb-20 tracking-tight animate-fade-in">
    {locale.culture.title}
  </h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
    {locale.culture.sections.map((section: any, index: number) => (
      <div 
        class="group bg-white/90 dark:bg-gray-800/95 backdrop-blur-sm rounded-2xl p-6 md:p-8 lg:p-10 shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-lg hover:border-gray-300 dark:hover:border-gray-600 transition-all duration-300 hover:-translate-y-1 animate-fade-in-up"
        style={`animation-delay: ${index * 100}ms`}
      >
        <div class="flex items-start gap-4 mb-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-800 flex items-center justify-center group-hover:bg-gray-200 dark:group-hover:bg-gray-700 transition-colors">
            <span class="text-xl">{index === 0 ? 'âœ¨' : index === 1 ? 'ðŸ’«' : 'ðŸŒŸ'}</span>
          </div>
          <h3 class="text-xl lg:text-2xl font-semibold text-gray-900 dark:text-gray-100">
            {section.title}
          </h3>
        </div>
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed text-base lg:text-lg">
          {section.description}
        </p>
      </div>
    ))}
  </div>
</section>
