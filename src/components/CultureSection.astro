---
interface Props {
  locale: any;
}

const { locale } = Astro.props;
---

<section class="w-full max-w-6xl mx-auto px-6 py-20">
  <h2 class="text-3xl md:text-4xl font-light text-center text-gray-900 dark:text-gray-100 mb-16">
    {locale.culture.title}
  </h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {locale.culture.sections.map((section: any) => (
      <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-sm border border-gray-200 dark:border-gray-800 hover:shadow-md transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
          {section.title}
        </h3>
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
          {section.description}
        </p>
      </div>
    ))}
  </div>
</section>
