---
import type { Locale } from '../types/locale';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<section class="w-full container py-20 lg:py-32 animate-slide-up">
  <h2 
    class="text-3xl sm:text-4xl lg:text-5xl font-light text-center mb-16 lg:mb-24 tracking-tight"
    style={{ color: 'var(--color-text-primary)' }}
  >
    {locale.culture.title}
  </h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10">
    {locale.culture.sections.map((section: any, index: number) => (
      <div 
        class="group rounded-2xl p-8 lg:p-10 transition-all duration-500 ease-out hover:-translate-y-3 hover:scale-[1.02] animate-slide-up relative overflow-hidden backdrop-blur-sm"
        style={{ 
          background: 'linear-gradient(135deg, var(--color-bg-elevated) 0%, var(--color-bg-secondary) 100%)',
          border: '1px solid var(--color-border)', 
          boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.06)',
          animationDelay: `${index * 100}ms`
        }}
      >
        <!-- Tailwind CSS 4 é£Žæ ¼çš„æ‚¬åœå…‰æ•ˆ -->
        <div class="absolute inset-0 bg-gradient-to-br from-white/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 dark:from-white/5"></div>
        
        <div class="relative z-10 flex items-start gap-4 mb-5">
          <div 
            class="flex-shrink-0 w-12 h-12 rounded-xl flex items-center justify-center transition-all duration-300 group-hover:scale-110"
            style={{ background: 'var(--color-bg-tertiary)' }}
          >
            <span class="text-2xl">{index === 0 ? 'âœ¨' : index === 1 ? 'ðŸ’«' : 'ðŸŒŸ'}</span>
          </div>
          <h3 
            class="text-xl lg:text-2xl font-semibold"
            style={{ color: 'var(--color-text-primary)' }}
          >
            {section.title}
          </h3>
        </div>
        <p 
          class="leading-relaxed text-base lg:text-lg relative z-10"
          style={{ color: 'var(--color-text-secondary)' }}
        >
          {section.description}
        </p>
        
        <!-- æ‚¬åœæ—¶çš„é˜´å½±å¢žå¼º - ä½¿ç”¨ Tailwind ç±» -->
        <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none shadow-xl dark:shadow-2xl"></div>
      </div>
    ))}
  </div>
</section>
