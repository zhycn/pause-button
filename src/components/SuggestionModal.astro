---
// 建议弹窗组件
import LightbulbIcon from './icons/LightbulbIcon.astro';
---

<div
  id="suggestion-modal"
  class="fixed inset-0 z-50 flex items-center justify-center p-4 transition-opacity duration-300 opacity-0 pointer-events-none"
  role="dialog"
  aria-modal="true"
  aria-labelledby="suggestion-title"
>
  <!-- 背景遮罩 -->
  <div 
    class="absolute inset-0 bg-slate-900/60 dark:bg-slate-950/80 backdrop-blur-md transition-opacity duration-300"
    data-modal-backdrop
  ></div>
  
  <!-- 弹窗内容 -->
  <div 
    id="modal-content"
    class="relative bg-white dark:bg-slate-800 rounded-3xl p-8 md:p-10 max-w-lg w-full shadow-2xl transform transition-all duration-300 scale-95 translate-y-4"
  >
    <!-- 装饰性图标 -->
    <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center shadow-lg opacity-20 dark:opacity-30 animate-pulse-slow">
      <LightbulbIcon class="w-8 h-8 text-white" />
    </div>
    
    <!-- 内容区域 -->
    <div class="relative">
      <h2 id="suggestion-title" class="sr-only">暂停建议</h2>
      <p 
        class="text-slate-800 dark:text-slate-100 text-xl md:text-2xl leading-relaxed font-medium text-center"
        id="suggestion-text"
      >
        <!-- 内容由 JavaScript 动态填充 -->
      </p>
    </div>
    
    <!-- 底部装饰线 -->
    <div class="mt-8 pt-6 border-t border-slate-200 dark:border-slate-700">
      <p class="text-center text-sm text-slate-500 dark:text-slate-400 flex items-center justify-center gap-2">
        <span>慢慢来，不着急</span>
        <span class="animate-pulse">✨</span>
      </p>
    </div>
    
    <!-- 关闭按钮（可选） -->
    <button
      class="absolute top-4 right-4 p-2 rounded-lg text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-slate-400/30"
      aria-label="关闭"
      data-close-modal
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
</div>

<!-- 关闭逻辑由父组件处理 -->
