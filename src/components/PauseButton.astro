---
// 主暂停按钮组件 - 高级感黑白主题设计
import PauseIcon from './icons/PauseIcon.astro';

interface Props {
  buttonText?: string;
  ariaLabel?: string;
}

const { 
  buttonText = "暂停一下",
  ariaLabel = "点击获取暂停建议"
} = Astro.props;
---

<button
  id="pause-btn"
  class="pause-button group relative inline-flex items-center justify-center gap-3 px-8 md:px-10 py-4 md:py-5 rounded-lg font-semibold text-base md:text-lg transition-all duration-300 ease-out focus:outline-none focus:ring-2 focus:ring-offset-2 active:scale-[0.98] overflow-hidden"
  aria-label={ariaLabel}
>
  <!-- 按钮内容 -->
  <span class="relative z-10 flex items-center gap-2 md:gap-3">
    <PauseIcon class="w-5 h-5 md:w-6 md:h-6 transition-all duration-300 group-hover:scale-110" />
    <span class="relative font-medium tracking-tight">{buttonText}</span>
  </span>
  
  <!-- 点击时的微妙反馈 -->
  <span class="absolute inset-0 rounded-lg bg-current opacity-0 group-active:opacity-5 transition-opacity duration-200"></span>
</button>

<style>
  /* 高级感的黑白主题按钮设计 */
  .pause-button {
    position: relative;
    isolation: isolate;
    font-weight: 600;
    letter-spacing: -0.01em;
  }
  
  /* 亮色模式 - 深色按钮，白色文字 */
  .pause-button {
    background: #0f172a;
    color: #ffffff;
    border: 1px solid rgba(15, 23, 42, 0.1);
    box-shadow: 
      0 1px 2px 0 rgba(0, 0, 0, 0.05),
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  .pause-button:hover {
    background: #1e293b;
    border-color: rgba(15, 23, 42, 0.2);
    transform: translateY(-1px);
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  
  .pause-button:focus {
    outline: 2px solid rgba(15, 23, 42, 0.5);
    outline-offset: 2px;
  }
  
  /* 暗色模式 - 白色按钮，深色文字 */
  .dark .pause-button {
    background: #ffffff;
    color: #0f172a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 
      0 1px 2px 0 rgba(0, 0, 0, 0.1),
      0 4px 6px -1px rgba(0, 0, 0, 0.2),
      0 2px 4px -1px rgba(0, 0, 0, 0.15);
  }
  
  .dark .pause-button:hover {
    background: #f8fafc;
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.2),
      0 10px 15px -3px rgba(0, 0, 0, 0.3),
      0 4px 6px -2px rgba(0, 0, 0, 0.2);
  }
  
  .dark .pause-button:focus {
    outline: 2px solid rgba(255, 255, 255, 0.5);
    outline-offset: 2px;
  }
  
  /* 平滑的过渡动画 */
  .pause-button * {
    transition: transform 0.2s ease-out, opacity 0.2s ease-out;
  }
  
  /* 图标动画 */
  .pause-button:hover svg {
    transform: scale(1.05);
  }
  
  /* 响应式优化 */
  @media (max-width: 640px) {
    .pause-button {
      padding: 0.875rem 1.5rem;
      font-size: 0.9375rem;
    }
  }
</style>

<script>
  const btn = document.getElementById('pause-btn');
  if (btn && typeof window !== 'undefined') {
    // 按钮点击事件由父组件处理
  }
</script>
