---
// 主暂停按钮组件
import PauseIcon from './icons/PauseIcon.astro';

interface Props {
  onClick?: () => void;
}

const { onClick } = Astro.props;
---

<button
  id="pause-btn"
  class="group relative inline-flex items-center justify-center gap-3 px-10 py-5 rounded-2xl bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 dark:from-slate-50 dark:via-white dark:to-slate-100 text-white dark:text-slate-900 font-semibold text-lg shadow-[0_8px_32px_rgba(0,0,0,0.12)] dark:shadow-[0_8px_32px_rgba(0,0,0,0.2)] hover:shadow-[0_12px_48px_rgba(0,0,0,0.16)] dark:hover:shadow-[0_12px_48px_rgba(0,0,0,0.3)] transition-all duration-300 ease-out focus:outline-none focus:ring-4 focus:ring-slate-400/30 dark:focus:ring-slate-600/30 active:scale-[0.98] overflow-hidden"
  aria-label="点击获取暂停建议"
>
  <!-- 背景光效 -->
  <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-1000 ease-in-out"></span>
  
  <!-- 按钮内容 -->
  <span class="relative z-10 flex items-center gap-3">
    <PauseIcon class="w-6 h-6 transition-transform group-hover:scale-110 group-hover:rotate-12" />
    <span class="relative transition-transform group-hover:translate-x-0.5">暂停一下</span>
  </span>
  
  <!-- 点击波纹效果 -->
  <span class="absolute inset-0 rounded-2xl bg-white/20 scale-0 group-active:scale-100 opacity-0 group-active:opacity-100 transition-all duration-300"></span>
</button>

<script>
  const btn = document.getElementById('pause-btn');
  if (btn && typeof window !== 'undefined') {
    // 按钮点击事件由父组件处理
  }
</script>
